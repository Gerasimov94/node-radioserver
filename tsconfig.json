{
	"compilerOptions": {
		"baseUrl": ".",
		"paths" : {
			"src/*": ["./src/*"]
		},
		"esModuleInterop": true,
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"moduleResolution": "node",
		"pretty": true,
		"sourceMap": true,
		"lib": ["es6", "es7"],
		"outDir": "dist",
	},
	"exclude": [
		"node_modules"
	],
}